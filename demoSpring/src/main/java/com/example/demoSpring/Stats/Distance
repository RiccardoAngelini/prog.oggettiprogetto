package com.example.demoSpring.Stats;

import com.example.demoSpring.Stats.Distance;

public class Distance {
    private double R=6371;
    private double pigreco=3.1415927;
    private double lat_one, lat_two;
    private double lon_one, lon_two;
    private double fi;
    private double p,distance;
    private String latitude;
    private String longitude;
    convertStringindouble pointone;
    convertStringindouble pointtwo;
    public Distance(final double R,final double pigreco,double distance, double lat_one,double lat_two,double lon_one,double lon_two, double fi,double p)
    {
        this.R=R;
        this.pigreco=pigreco;
        this.lat_one=lat_one;
        this.lat_two=lat_two;
        this.lon_one=lon_one;
        this.lon_two=lon_two;
        this.fi=fi;
        this.p=p;
        this.distance=distance;
    }

    public double  findDistance(final double R,final double pigreco,double distance,double lat_one,double lat_two,double lon_one,double lon_two,double fi) {
        lat_one=pigreco*pointone.conversionLatitude(latitude)/180;
        lat_two=pigreco*pointtwo.conversionLatitude(latitude)/180;
        lon_one=pigreco*pointone.conversionLongitude(longitude)/180;
        lon_two=pigreco*pointtwo.conversionLongitude(longitude)/180;
        fi=Math.abs(lon_one-lon_two) ;  //calcola l'angolo compreso fi
        p=Math.cos(Math.sin(lat_two)*Math.sin(lat_one)+Math.cos(lat_two)*Math.cos(lat_one)*Math.cos(fi));//calcolo il terzo lato del triangolo sferico
        distance=p*R;
        return distance;
    }

    public void setDistance(double distance) {
        this.distance = distance;
    }

    public double getDistance() {
        return distance;
    }

}
