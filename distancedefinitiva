public class Distance {




   private String [] parts;
   private String latitude;
   private String longitude;
    public Distance()
    {


    }



    public double  findDistance (String[] parts){
        cutTheString cutthestring=new cutTheString(latitude,longitude) ;
        latitude= cutthestring.getLatitude(parts);
        longitude=cutthestring.getLongitude(parts);


        convertStringindouble pointone=new convertStringindouble(latitude,longitude);
        convertStringindouble pointtwo=new convertStringindouble(latitude,longitude);
       double distance;
       double lat_one=3.1415927*pointone.conversionLatitude(latitude)/180;  //3.14ecc è il pigrecp
       double lat_two=3.1415927*pointtwo.conversionLatitude(latitude)/180;
       double lon_one=3.1415927*pointone.conversionLongitude(longitude)/180;
       double lon_two=3.1415927*pointtwo.conversionLongitude(longitude)/180;
       double fi=Math.abs(lon_one-lon_two) ;  //calcola l'angolo compreso fi
       double p=Math.cos(Math.sin(lat_two)*Math.sin(lat_one)+Math.cos(lat_two)*Math.cos(lat_one)*Math.cos(fi));//calcolo il terzo lato del triangolo sferico
        distance=p*6371; // 6371 è il raggio della superfice terrestre
        return distance;
    }


}
